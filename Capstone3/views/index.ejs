<%- include("partials/header.ejs"); %>

<div class="container my-3">
  <div class="row g-5">
    <div class="col-md-8">
<% if (post.length != 0) { %>
    <% for (var i = post.length-1; i>=0; i--) {%>
        <article class="blog-post">
            <h2 class="display-5 link-body-emphasis mb-1"><%= titles[i] %></h2>
            <p class="blog-post-meta"><%= timeStamp[i] %></p>
            <p> <%= post[i] %> </p>
    <% } %>
<% } else { %>
    <h1>There are no posts!!!</h1>
<% } %>
    </div>

    <div class="col-md-4">
      <div class="position-sticky" style="top: 2rem">
        <div class="p-4 mb-3 bg-body-tertiary rounded">
          <h4 class="fst-italic">About</h4>
          <p class="mb-0">
            This is a blog developed using Node.js, Express, EJS, HTML,
            Bootstrap and Body Parser. It doesn't save your post after the
            session ends because it doesn't have database
          </p>
        </div>

        <div class="p-4">
          <h4 class="fst-italic">GitHub Project</h4>
          <ol class="list-unstyled">
            <li><a href="#">GitHub</a></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs"); %>
